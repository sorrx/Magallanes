{
  "name": "andres-montanez/magallanes",
  "description": "The Deployment Tool for PHP Applications",
  "homepage": "https://magephp.com",
  "license": "MIT",
  "type": "library",
  "keywords": ["deployment"],
  "authors": [
    {
      "name": "Andrés Montañez",
      "email": "andresmontanez@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "monolog/monolog": "^2.5",
    "symfony/console": "^7.0",
    "symfony/filesystem": "^7.0",
    "symfony/event-dispatcher": "^7.0",
    "symfony/finder": "^7.0",
    "symfony/yaml": "^7.0",
    "symfony/process": "^7.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.0",
    "phpunit/phpunit": "^12",
    "phpstan/phpstan": "^2.0",
    "phpstan/phpstan-strict-rules": "^2.0",
    "phpstan/phpstan-symfony": "^2.0",
    "squizlabs/php_codesniffer": "^3.6",
    "php-coveralls/php-coveralls": "^2.5"
  },
  "scripts": {
    "cscheck": "php-cs-fixer fix src --verbose --dry-run --rules=@PSR2",
    "csfix": "php-cs-fixer fix src --verbose --rules=@PSR2",
    "phpstan": "phpstan analyse src/ -c phpstan.neon --level=5 --no-progress -vvv --memory-limit=1024M",
    "phpunit": "SYMFONY_DEPRECATIONS_HELPER=disabled php vendor/bin/phpunit --bootstrap vendor/autoload.php tests"
  },
  "suggest": {
    "ext-posix": "*"
  },
  "autoload": {
    "psr-4": {
      "Mage\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Mage\\Tests\\": "tests/"
    }
  },
  "bin": ["bin/mage"],
  "extra": {
    "branch-alias": {
      "dev-master": "5.0.x-dev",
      "dev-galactica": "5.x-dev"
    }
  }
}
